<h1>Add Nested Groups</h1>

<table border=1>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Department</th>
   
  </tr>

<% @group_nestings.each do |group_nesting| %>
  <tr class="node <%= cycle("even", "odd")%>" onclick="getNesting(<%= group_nesting.id %>, this)">
    <td><%= group_nesting.name %></td>
    <td><%= GroupCategory.find_by_id(group_nesting.category_id).category_name%></td>
    <td><%= group_nesting.department_id %></td>
   
    
  </tr>
<% end %>
</table>

<br />



<p><%= will_paginate @groups %></p>

<div id="addNestingForm" style="display: none;">
	<%= form_for(@group_nesting) do |f| %>
	<div class="field">
	    <%= f.label :parent_id %><br />
	    <%= f.text_field :parent_id %>
	  </div>
	  <div class="field">
	    <%= f.label :group_id %><br />
	    <%= f.text_field :group_id %>
	  </div>
	  

</div>
	  <div class="actions">
	    <%= submit_tag 'Add Nested Group', :id=>"group_nesting_submit", :name=>"commit", :onclick=>"exGroup()" %>
	  </div>
	<% end %>
